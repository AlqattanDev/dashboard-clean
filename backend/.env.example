# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=clean_dashboard

# JWT Configuration  
JWT_SECRET_KEY=your-very-secure-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# LDAP Configuration (optional - set LDAP_ENABLED=true to enable)
LDAP_ENABLED=false
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BASE_DN=dc=company,dc=com
LDAP_USER_DN_TEMPLATE=uid={username},ou=users,{base_dn}

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Production LDAP Example:
# LDAP_ENABLED=true
# LDAP_SERVER=ldaps://ldap.company.com:636
# LDAP_BASE_DN=dc=company,dc=com
# LDAP_USER_DN_TEMPLATE=uid={username},ou=people,{base_dn}
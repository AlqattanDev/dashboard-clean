# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=clean_dashboard

# JWT Configuration - IMPORTANT: Change JWT_SECRET_KEY in production
JWT_SECRET_KEY=dashboard_super_secure_jwt_key_2024_change_in_production_please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# LDAP Configuration (disabled by default)
LDAP_ENABLED=false
LDAP_SERVER=ldap://localhost:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN_TEMPLATE=uid={username},ou=users,{base_dn}

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Development Note:
# This .env file contains development values. 
# For production deployment:
# 1. Generate a strong random JWT_SECRET_KEY
# 2. Set DEBUG=false
# 3. Configure proper MongoDB connection string
# 4. Set up LDAP if needed